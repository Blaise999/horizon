{
  "compilerOptions": {
    /* === Modern JS Target === */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* === React / Next specifics === */
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,

    /* === Type safety & performance === */
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* === Path alias (works with Next.js app dir) === */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* === Next.js plugin support === */
    "plugins": [{ "name": "next" }],

    /* === Modern ESM friendliness === */
    "verbatimModuleSyntax": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "src/app/dashboard/loginpage"  ],
  "exclude": ["node_modules"]
}
